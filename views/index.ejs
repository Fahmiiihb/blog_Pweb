<div class="author">
    <h1 class="author_heading">Hi, I am Fahmi</h1>
    <p class="author_body">Student at UIN Sunan Gunung Djati Bandung</p>
</div>

<img src="/img/hero-image.jpg" alt="person looking out through window" class="hero-image" width="981" height="528">

<section class="article">
    <h2 class="article_heading">Latest Post</h2>
    
    <ul class="article-ul">
        <% data.forEach(post => { %>
        <li>
            <a href="/post/<%= post._id %>">
                <span><%= post.title %></span>
                <span class="article-list_date"><%= post.createdAt.toDateString() %></span>
            </a>
        </li>
        <% }) %>
    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Post</a>
    <% } %>
    
</section>